{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./.dist/",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "paths": {},
    "types": [
      "node",
    ]
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}