{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "no-console": false,
    "ban": [
      true,
      {
        "name": ["Math", "random"],
        "message": "Use a better RNG, perhaps UUID?"
      }
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
